@model Contact
@{
    ViewData["Title"] = "Contact Us";
}


      <section >
        <div class="background">
          <div class="container">
            <div class="screen">
              <div class="screen-body">
                <div class="screen-body-item left">
                    <div class="app-title d-flex">
                        @*<img class="rounded contact-us-img" width="250px" height="250px" src="https://cdn-icons-png.flaticon.com/512/29/29383.png" />*@
                        <svg xmlns="http://www.w3.org/2000/svg" width="235" height="230" fill="currentColor" class="bi bi-envelope-paper" viewBox="0 0 16 16">
                            <path d="M4 0a2 2 0 0 0-2 2v1.133l-.941.502A2 2 0 0 0 0 5.4V14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V5.4a2 2 0 0 0-1.059-1.765L14 3.133V2a2 2 0 0 0-2-2H4Zm10 4.267.47.25A1 1 0 0 1 15 5.4v.817l-1 .6v-2.55Zm-1 3.15-3.75 2.25L8 8.917l-1.25.75L3 7.417V2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1v5.417Zm-11-.6-1-.6V5.4a1 1 0 0 1 .53-.882L2 4.267v2.55Zm13 .566v5.734l-4.778-2.867L15 7.383Zm-.035 6.88A1 1 0 0 1 14 15H2a1 1 0 0 1-.965-.738L8 10.083l6.965 4.18ZM1 13.116V7.383l4.778 2.867L1 13.117Z" />
                        </svg>
                    </div>
                        @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                        {
                            <span class="alert alert-success mt-1 text-center">@ViewBag.Message</span>
                        }
                </div>
                <div class="screen-body-item">
                  <form method="post">
                    <div class="app-form">
                      <div class="app-form-group">
                        <input class="app-form-control" placeholder="NAME" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                      </div>
                      <div class="app-form-group">
                        <input class="app-form-control" placeholder="EMAIL" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                      </div>
                      <div class="app-form-group message">
                        <input class="app-form-control" placeholder="MESSAGE" asp-for="Message" />
                        <span asp-validation-for="Message" class="text-danger"></span>

                      </div>
                      <div class="app-form-group buttons">
                        <button  class="app-form-button btn btn-primary custom-button" >SEND</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    @section addjs{
        <script src="~/assets/libraries/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/assets/libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
    @section addcss{
        <style>
            .app-form-control{
                text-transform:none;
            }
        </style>
    }